{
  "name": "animated-login-app",
  "version": "1.0.0",
  "description": "Beautiful login page with dynamic animations using React.js and Node.js with Firebase authentication",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install"
  },
  "keywords": [
    "react",
    "nodejs",
    "firebase",
    "authentication",
    "animations"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "firebase-admin": "^13.5.0",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "react-google-recaptcha": "^3.1.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  }
}
